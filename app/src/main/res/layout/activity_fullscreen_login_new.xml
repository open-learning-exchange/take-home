<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="pbell.offline.ole.org.pbell.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/fullscreen_content2">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="vertical"
            tools:ignore="UselessParent"
            android:weightSum="6"
            android:background="@color/ole_white">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_height="0dp"
                android:background="@color/ole_black_blue"
                android:weightSum="10"
                android:gravity="center">

                <TextView
                    android:text="Take Home - v0.1.1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18"
                    android:layout_weight="3"
                    android:textColor="@color/ole_white"
                    android:textStyle="normal|bold"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btnFeedback"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/title"
                    android:textAllCaps="false"
                    android:textColor="@color/ole_white"
                    android:text="@string/txtFeedback"/>

                <TextView
                    android:text="English"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    android:layout_weight="2.5"
                    android:textColor="@color/ole_white"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSetup"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="@dimen/title"
                    android:textAllCaps="false"
                    android:textColor="@color/ole_white"
                    android:text="@string/btnSetup"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="0.8"
                android:layout_height="0dp"
                android:weightSum="6"
                android:background="@color/ole_white"
                android:gravity="center"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.1"
                    android:textAlignment="center"
                    android:weightSum="4"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:gravity="center">

                        <TextView
                            android:text="@string/txtMember_Login"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textView20"
                            android:textAlignment="center"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:textColor="@color/ole_black_blue" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- First layout bar -->

            <!-- Second layout bar -->

            <!-- Third layout bar -->

            <!-- Forth layout bar -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginStart="1dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:weightSum="3">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"></LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@drawable/rounded_corners_all"
                    android:weightSum="8"
                    android:padding="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:layout_marginTop="5dp">

                        <Button
                            android:id="@+id/btnWelcome"
                            android:background="@drawable/rounded_corners_green_btn"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:textSize="@dimen/title"
                            android:textAllCaps="false"
                            android:textColor="@color/ole_white"
                            android:text="@string/txtWelcome"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:background="@drawable/rounded_corners_black_blue"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:weightSum="4"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:text="@string/txtLogin"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/textView21"
                            android:layout_weight="1"
                            android:textColor="@color/ole_white"
                            android:gravity="bottom" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corners_white">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="textPersonName"
                                android:text="Name"
                                android:ems="10"
                                android:id="@+id/txtUsername"
                                android:textColorLink="?attr/colorPrimaryDark"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:text="@string/txt_Password"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/textView22"
                            android:layout_weight="1"
                            android:textColor="@color/ole_white"
                            android:gravity="bottom" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corners_white">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="textPassword"
                                android:ems="10"
                                android:id="@+id/txtPassword"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.7"
                        android:weightSum="4">
                        <Button
                            android:id="@+id/btnSignIn"
                            android:background="@drawable/rounded_corners_green_btn"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:textSize="@dimen/title"
                            android:textAllCaps="false"
                            android:textColor="@color/ole_white"
                            android:text="@string/action_sign_in"/>
                        <Button
                            android:id="@+id/btnDemo"
                            android:background="@drawable/rounded_corners_blue_btn"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:textSize="@dimen/title"
                            android:textAllCaps="false"
                            android:textColor="@color/ole_white"
                            android:text="@string/txtDemo"
                            android:layout_marginTop="3dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>
